{% extends 'base.html.twig' %}

{% block body %}
    <div class="starter-template">
        <h1>Address Book</h1>
    </div>
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="bs-example" data-example-id="simple-table">
                <table class="table">
                    <caption>Saved Addresses.</caption>
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for address in addresses %}
                        <tr>
                            <th scope="row">{{ address.id }}</th>
                            <td>{{ address.firstName }}</td>
                            <td>{{ address.lastName }}</td>
                            <td>
                                <a href="{{ path('showAddress', {'id': address.id}) }}" class="btn btn-success">View</a>
                                <a href="{{ path('editAddress', {'id': address.id}) }}" class="btn btn-default">Edit</a>
                                <a href="{{ path('deleteAddress', {'id': address.id}) }}" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-xs-2"></div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            padding-top: 50px;
        }

        .starter-template {
            padding: 40px 15px;
            text-align: center;
        }
    </style>
{% endblock %}
